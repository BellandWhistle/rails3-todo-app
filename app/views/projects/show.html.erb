<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @project.name %>
</p>

<div>
  <%= render 'tasks/form', :task => Task.new %>
</div>
<hr />
<div id='initial-tasks'>
  <h2>Initial</h2>
  <% @project.tasks.initial.each do |task| %>
    <%= render task %>
  <% end %>
</div>
<div id='in-progress-tasks'>
  <h2>In Progress</h2>
  <% @project.tasks.in_progress.each do |task| %>
    <%= render task %>
  <% end %>
</div>
<div id='verify-tasks'>
  <h2>Verify</h2>
  <% @project.tasks.verify.each do |task| %>
    <%= render task %>
  <% end %>
</div>
<div id='done-tasks'>
  <h2>Done</h2>
  <% @project.tasks.done.each do |task| %>
    <%= render task %>
  <% end %>
</div>

<%= link_to 'Back', projects_path %>
